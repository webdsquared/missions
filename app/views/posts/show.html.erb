<%= provide(:title, "Post") %>    
<%= render "partials/hdr" %>    

<div class="pg-container bg-white">
  <div class="container">
    <div id="secondary-pg-title">
      <div class="row">
        <div class="span1">
          <%= image_tag("uk-map.jpg", size: "66x100") %>
        </div>
        <div class="span11">
          <h2 class="sec-title">Oh, the Places You'll Go Post</h2>
        </div>
      </div>
    </div>
  </div>


  <div class="container">
    <div id="posts-container">
      <div class="row">
        <div class="span9">
          <div class="row">
            <div class="span1">&nbsp;
            </div>
            <div class="span8">
              <div class="post-main">
                <h2 class="blog-post-title"><%= @post.title %></h2>
                <em><p class="blog-detail">Posted by <%= @post.blog %> on <%= @post.published_on.strftime("%b %-d") %> |
                Category:
                <%= @post.categories.collect { |cat|  cat.name }.join(", ") %>          
                </p></em>
                <%= sanitize @post.body %>
                      
              </div>
            </div>
          </div>
        </div>
        <div class="span3">
          <div id="search-container">
            <%= form_tag posts_path, method: "get" do %>
              <div class="input-append">
                <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search..." %>
                <%= submit_tag "Search", name: nil, class: "btn" %>       
              </div>
            <% end %>   
          </div>
          <div id="recent-posts">
            <h4>Recent Posts</h4>
            <ul>
            <% for post in @side_posts %>
              <li><%= link_to post.title, post %></li>
            <% end %>
            <ul>
          </div>
          <div id="categories">
            <h4>Categories</h4>
            <ul>
              <% @all_categories.each do |cat| %>
                <li><%= link_to(cat.name, { action: "category", controller: "posts", id: cat.id }) %></li>
              <% end %>   
            </ul>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "partials/ftr" %>    